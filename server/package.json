{
  "name": "server",
  "version": "1.0.0",
  "author": "Akalanka Perera",
  "main": "src/server.ts",
  "scripts": {
    "dev": "bun --hot --enable-source-maps run src/server.ts",
    "start": "bun src/server.ts",
    "lint": "bun run --bun eslint --cache --ext js,ts,jsx,tsx --fix .",
    "test": "bun test --coverage --verbose --runInBand --forceExit",
    "typeorm": "bun ../node_modules/typeorm/cli.js --dataSource ./src/database/postgres/data-source.ts",
    "migration:generate": "sh ./scripts/migration-generate.sh",
    "migration:create": "sh ./scripts/migration-create.sh",
    "migrate": "bun run --bun typeorm migration:run",
    "rollback": "bun run --bun typeorm migration:revert"
  },
  "type": "module",
  "dependencies": {
    "@aws-sdk/client-s3": "3.556.0",
    "@sliit-foss/http-logger": "1.4.0",
    "@sliit-foss/functions": "2.10.0",
    "@sliit-foss/module-logger": "1.3.1",
    "@sliit-foss/service-connector": "2.3.0",
    "@shared/constants": "workspace:*",
    "apicache": "1.6.3",
    "bcryptjs": "2.4.3",
    "callsite": "1.0.0",
    "celebrate": "15.0.1",
    "cookie-parser": "1.4.7",
    "compression": "1.7.4",
    "cors": "2.8.5",
    "express": "4.16.3",
    "express-fileupload": "1.5.0",
    "express-rate-limit": "7.2.0",
    "helmet": "7.1.0",
    "http-errors": "2.0.0",
    "node-polyglot": "2.4.2",
    "ioredis": "5.2.3",
    "jsonwebtoken": "9.0.0",
    "pg": "8.13.3",
    "rate-limit-redis": "4.2.0",
    "redlock": "4.2.0",
    "reflect-metadata": "0.2.2",
    "request-ip": "3.3.0",
    "typeorm": "0.3.20"
  },
  "devDependencies": {
    "@types/apicache": "1.6.6",
    "@types/bcryptjs": "2.4.6",
    "@types/callsite": "1.0.34",
    "@types/cookie-parser": "1.4.8",
    "@types/compression": "1.7.5",
    "@types/cors": "2.8.17",
    "@types/node-polyglot": "2.5.0",
    "@types/redlock": "4.0.7",
    "@types/request-ip": "0.0.41"
  }
}
